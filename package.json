{
  "$schema": "http://json.schemastore.org/package",
  "name": "cordis",
  "version": "0.1.0",
  "description": "A modular, micros-service based Discord API wrapper",
  "scripts": {
    "lint": "pnpm recursive run lint --filter @cordis/*",
    "build": "pnpm recursive run build --filter @cordis/*",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cordisjs/cordis.git"
  },
  "contributors": [
    "didinele <didinele.dev@gmail.com> (https://github.com/didinele)",
    "Holo-Buckshot (https://github.com/Holo-Buckshot)"
  ],
  "author": "didinele",
  "bugs": {
    "url": "https://github.com/cordisjs/cordis/issues"
  },
  "homepage": "https://github.com/cordisjs/cordis#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-config-marine": "^7.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "typedoc": "^0.19.2",
    "typedoc-plugin-as-member-of": "^1.0.2",
    "typedoc-plugin-markdown": "^3.1.0",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typescript": "^4.0.3"
  },
  "renovate": {
    "extends": [
      "teal"
    ],
    "baseBranch": "next"
  },
  "eslintConfig": {
    "extends": "marine/node",
    "rules": {
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-require-imports": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/no-base-to-string": "off",
      "@typescript-eslint/no-throw-literal": "off",
      "one-var": "off",
      "no-eq-null": "off",
      "no-useless-constructor": "off",
      "no-negated-condition": "off",
      "promise/prefer-await-to-then": "off",
      "promise/prefer-await-to-callbacks": "off",
      "radix": "off",
      "no-multi-assign": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "pascal-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "types",
          "wip"
        ]
      ]
    }
  }
}
